{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "paths": {
      "@/*": ["./src/*"]
    },

    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
